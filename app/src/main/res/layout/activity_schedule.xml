<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/contact_schedule"
    tools:context=".information.ScheduleActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView android:id="@+id/tv_schedule_days"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/Schedule_Left"/>
        <TextView android:id="@+id/tv_schedule_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/Schedule_Right"/>

        <Button android:id="@+id/btn_map"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/ScheduleButton"
            android:text="@string/btn_map"/>
    </LinearLayout>

</RelativeLayout>
