<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="VotingButton" parent="AppTheme">
        <item name="android:background">@color/tv_voting</item>
        <item name="android:textSize">@dimen/tv_voting_textsize</item>
        <item name="android:padding">@dimen/tv_voting_padding</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AppTitle" parent="AppTheme">
        <item name="android:textSize">@dimen/title_textsize</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/flavor_item_text</item>
    </style>

    <style name="Schedule_Left" parent="AppTheme">
        <item name="android:background">@color/contact_schedule</item>
        <item name="android:layout_marginTop">@dimen/tv_schedule_margin_top</item>
        <item name="android:layout_marginStart">@dimen/tv_schedule_margin_side</item>
        <item name="android:layout_marginLeft">@dimen/tv_schedule_margin_side</item>
        <item name="android:gravity">left</item>
        <item name="android:lineSpacingExtra">5dp</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Schedule_Right" parent="AppTheme">
        <item name="android:background">@color/contact_schedule</item>
        <item name="android:layout_marginTop">@dimen/tv_schedule_margin_top</item>
        <item name="android:layout_marginEnd">@dimen/tv_schedule_margin_side</item>
        <item name="android:layout_marginRight">@dimen/tv_schedule_margin_side</item>
        <item name="android:gravity">right</item>
        <item name="android:lineSpacingExtra">5dp</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    
    <style name="ListItem" parent="AppTheme">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/flavor_item_textsize</item>
        <item name="android:padding">@dimen/flavor_item_padding</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/flavor_item_text</item>
    </style>
</resources>
